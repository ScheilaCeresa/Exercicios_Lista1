algoritmo "exer.3"
var
   a, b, c, area, p: real
inicio
      escreva ("Informe os lados do triangulo: ")
      leia (a, b, c)
      
      p <- (a + b + c) /2
      area <- raizq(p*(p - a)*(p - b)*(p - c)) // visualg raizq, c++ sqrt
      
      escreval ("Area do triangulo: ", area)
      escreva ("Semiperimetro: ", p)
fimalgoritmo